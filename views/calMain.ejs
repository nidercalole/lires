<style>
    .mainCal {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 80vh;
    }
    .left {
        width: 18%;
        height: 100%;

    }
    .calMin {
        width: 64%;
        height: 100%;

    }
    .right {
        width: 18%;
        height: 100%;

    }
    .tabs {
            list-style: none;
            padding: 0;
        }

        .tab {
            background-color: #ddd;
            margin: 5px 0;
            padding: 10px;
            cursor: pointer;
            border-radius: 5px;
        }

        .tab-content {
            display: none;
            padding: 10px;
            margin-top: 10px;
            background-color: #e9e9e9;
            border-radius: 5px;
        }

        .tab.active .tab-content {
            display: block;
        }
        .left-lower {
            height: 100%;
            overflow-y: auto;
        }
        .tabb {
            background-color: #ddd;
            margin: 5px 0;
            padding: 10px;
            cursor: pointer;
            border-radius: 5px;
        }
        table {
            width: 94%; /* Nimmt die gesamte Breite ein */
            height: 80%; /* Nimmt die gesamte Höhe ein */
            border-collapse: collapse; /* Entfernt Abstände zwischen den Zellen */
            margin: 0 auto; /* Zentriert die Tabelle */
        }

        td {
            width: 14.28%; /* Jede Zelle nimmt 1/7 der Breite ein */
            height: 100px; /* Höhe der Zellen */
            padding: 0;
            text-align: center;
            vertical-align: middle;
            border: 1px solid black; /* Dünner schwarzer Rand um jede Zelle */
        }

        .cell {
            width: 100%;
            height: 100%;
            display: flex;
            justify-content: center;
            align-items: center;
            box-sizing: border-box;
        }

        /* Hier kannst du optional noch eine "aktive" Zelle hervorheben */
        .active {
            background-color: #f0f0f0;
        }
        .overCal {
            height: 8%;
            width: 100%;

        }
        .underCal {
            height: 12%;
            width: 100%;

        }
</style>
<div class="mainCal">
    <div class="left">
        <div class="left-lower">
            <ul class="tabs">
                <li class="tab">
                    Schon Verwendet
                        <% usedRecs.forEach(recipe => { %>
                            <div class="tab-content"><%= recipe.recname %></div>
                        <% }) %>
                </li>
                <li class="tab">
                    Angepinnt
                        <% markedRecs.forEach(recipe => { %>
                            <div class="tab-content"><%= recipe.recname %></div>
                        <% }) %>
                   
                </li>
                <li class="tabb active" style="display: block;">
                    Alle
                        <% recs.forEach(recipe => { %>
                            <div class="tab-content" style="display: block;"><%= recipe.recname %></div>
                        <% }) %>
                </li>
            </ul>
        </div>
    </div>
    <div class="calMin">
        <div class="overCal">
            <button>
                Wochenansicht
            </button>
        </div>
        <table>
            <!-- Tabelle mit 7 Zeilen und 4 Spalten -->
