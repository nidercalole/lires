            </tr>
        </table>
        <div class="underCal">
            <button>
                Neue Liste mit kompletem monat
            </button>
            <button>
                neue Liste mit individuell
            </button>
            <button>
                individuell zu liste hinzufügen
            </button>
        </div>
    </div>
    <div class="right">
        <%- include('partials/list.ejs') %>
    </div>
</div>
<script src="/js/calendarMain.js">
</script>
