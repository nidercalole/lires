<link rel="stylesheet" href="/css/mobile/addrec.css" />
<div class="padding">
    <ul class="noList">
        <li class="headInpRow">
            <zubDaTitle>Zubereitungsdauer:</zubDaTitle>
            <input class="zubDauInp" type="number" min="1" id="zubDauInp" />
            <slidZubDaTxt>Minuten</slidZubDaTxt>
        </li>
        <li class="headInpRow">
            <zubDaTitle>Arbeitsaufwand:</zubDaTitle>
            <slidZubDaTxt>gering</slidZubDaTxt>
            <input class="aufwRange" type="range" min="1" max="5" value="2.5" id="aufwRange" />
            <slidZubDaTxt>hoch</slidZubDaTxt>
        </li>
    </ul>
    <button class="grchtArtBtn" onclick="openTagList()">Art des Gerichtes auswählen</button>
    <div class="hidden" id="mobileTagList">
        <%- include('../partials/vieletags.ejs') %>
    </div>
    <textarea id="krzDesc" class="krzDesc" placeholder="Kurzbeschreibung (maximal 250 Zeichen)" maxlength="250"
        oninput="countChars()"></textarea>
    <p id="charCount" class="charCount"></p>
    <div class="inline">
        <div class="zutAn">
            <zutAn>Zutatenangabe für
                <input type="number" min="1" max="100" placeholder="Anzahl" class="anzEinhInp" id="anzInp" />
                <input type="text" placeholder="Einheit" class="anzEinhInp" id="anzEinhInp" />.
            </zutAn>
        </div>
        <button class="addZutBtn" onclick="addZut()">Zutat hinzufügen</button>
    </div>
    <table class="beinhTable" id="table1">
        <tr>
            <th class="moreWidth">Zutat</th>
            <th class="kindaMoreWidth">Menge</th>
            <th class="kindaMoreWidth">Einheit</th>
        </tr>
        <tr id="backfisch">
            <td><input id="tableInp11" class="tableInp"></input></td>
            <td><input id="tableInp12" class="tableInp" type="number"></input></td>
            <td><input id="tableInp13" class="tableInp"></input></td>
        </tr>
    </table>
    <div class="inline"><input class="shoInfInp" placeholder="Kurzinformationen (bspw. Backtemperatur)"
        id="shoInfInp" /><button class="addInfoBtn" onclick="">Info hinzufügen</button></div>
</div>
<div class="hidden" id="lbls"></div>

<div class="row"><button class="chooseBtn" id="chooseBtn" onclick="chooseBtn()">Im Fließtext beschreiben</button>
    <button class="stepaddbtn hidden" id="stepaddbtn" onclick="addstepp()">Schritt hinzufügen</button>
</div>

<div><textarea class="vorgehen" placeholder="Vorgehen" id="explanation"></textarea>
    <div id="stepwise" class="stepwise hidden">
        <textarea class="stepvorgehen" placeholder="Schritt 1" id="step_1"></textarea>
    </div>
</div>
</div>
<script src="/js/addrec.js"></script>
<script src="/js/collectrecinfo.js"></script>
<script src="/js/mobile/script.js"></script>