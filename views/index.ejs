<!-- end of Search filter-->

</div>
<div id="nichtFilter">
  <div class="split splitLeft">
    <div>
      <h2>This Website is in development</h2>
      <p>Mehr Text <br> This development is in website</p>
    </div>

    <div>
      <table class="recsindex">
        <tr>
          <th colspan="4">
            <h1>Neueste Rezepte</h1>
          </th>
        </tr>
        <% recs.forEach(rec=> { %>
          <tr class="recsrow" onclick="openRec('<%= rec.recid %>')">
            <td class="recname">
              <%= rec.recname %>
            </td>
            <td class="duration">Dauer: <%= rec.duration %>min</td>
            <td class="expense">
              <%= rec.expense %>
            </td>
            <td class="recuser">
              <%= rec.user && rec.user.length> 0 ? rec.user[0] : 'N/A' %>
            </td>
          </tr>
          <% }); %>
      </table>
    </div>
    <div class="allrecs"><button class="allrecsbuttob" onclick="getAndShowAllRecs()">Alle Rezepte</button></div>

  </div>
  <div id="listArea" class="split splitRight ">
    <div>
      <h2 class="splRiTxt">Text SplitRight</h2>
      <hr class="hoLineSplitRight">
      <ul class="splRiListTxt">
        <li>Auch Text</li>
        <li>Hier</li>
        <li>Wieauchimmer</li>
        <li>man das mit dem</li>
        <li>Adden umsetzt...</li>user
      </ul>
    </div>
  </div>

  <button id="addRec" class="addRec" onclick="buttaddrec()">
    <img src="/img/addrec.png" alt="Füge Rezepte hinzu" width="55px">
  </button>
</div>
