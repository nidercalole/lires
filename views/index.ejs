<link rel="stylesheet" href="/css/v2/styleindex_v3.css">

<div class = "index kumpeln spaceBetween">
  <div class="filterBalken">
    <div class="stapeln" id="buttonWrapper">
            <button class="schnellFilter zentrieren stapeln" onclick="openRecList('warm', 'Hier sind alle warmen Gerichte')">
