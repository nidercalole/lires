<div id="filOptionPage" class="filOptionPage">
  <filHeader class="filGridHeader">Filter</filHeader>
  <div class="filGridArtGericht" id="artGericht"><h3>Art des Gerichts</h3>
    <select class="filDropdown">
      <%- include('./partials/filteroptions.ejs') %>
    </select>
  </div>
  <div class="filGridZubDauer" id="zubDauer"><h3>Zubereitungsdauer</h3>
    <input type="range" min="14" max="180" value="14" class="sliderZubDauer" id="maxDauer" oninput="maxDauerInput()"> 
    <p><span id="maxMin"></span></p>
  </div>
  <div id=exclude><h3>Aus Suchergebnissen ausschließen</h3>
    <input class="filGridInp" placeholder="Zutaten">
    <input class="filGridInp" placeholder="Zubehör">
    <input class="filGridInp" placeholder="Prozesse">
  </div>
  <div id=include><h3>In Suchergebnisse inkludieren</h3>
    <input class="filGridInp" placeholder="Zutaten">
    <input class="filGridInp" placeholder="Prozesse">
  </div>
</div>
</div>

<div class="split splitLeft">
    <div>
      <h2>This Website is in development</h2>
      <p>Mehr Text <br> This development is in website</p>
    </div>

  <div>
    <table class="recsindex">
        <tr>
            <th colspan="4"><h1>Neueste Rezepte</h1></th>
        </tr>
        <% recs.forEach(rec => { %>
            <tr class="recsrow" onclick="openRec('<%= rec.recid %>')">
                <td class="recname"><%= rec.recname %></td>
                <td class="duration">Dauer: <%= rec.duration %>min</td>
                <td class="expense"><%= rec.expense %></td>
                <td class="recuser"><%= rec.user[0] %></td>
            </tr>
        <% }); %>
    </table>
  </div>

  </div>
  <div id="listArea" class="split splitRight ">
    <div>
      <h2 class="splRiTxt">Text SplitRight</h2>
      <hr class="hoLineSplitRight">
      <ul class="splRiListTxt">
        <li>Auch Text</li>
        <li>Hier</li>
        <li>Wieauchimmer</li>
        <li>man das mit dem</li>
        <li>Adden umsetzt...</li>
      </ul>
    </div>
  </div>

